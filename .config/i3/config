    bindsym d exec dbeaver, mode "default"
    bindsym s exec slack, mode "default"
    bindsym n exec caja, mode "default"
    bindsym p exec gedit, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

